apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-deployment
  labels:
    app: nginx
spec:
  replicas: 3  # Number of pod replicas
  selector:
    matchLabels:
      app: nginx  # Label selector
  template:
    metadata:
      labels:
        app: nginx  # Pod label
    spec:
      containers:
        - name: nginx-container
          image: vengatesh21/nginx-proxy:latest  # Change to your Docker image name
          ports:
            - containerPort: 8082  # The port that Nginx listens on
